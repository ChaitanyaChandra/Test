node {
    stage('Checkout') {
      stage('Code Checkout') {
        git branch: 'master', url: "https://github.com/chaitanyachandra/test.git"
      }
    }

    stage('Build') {
        sh 'your-build-command-here'
    }

    stage('Test') {
        sh 'your-test-command-here'
    }

    stage('Deploy') {

      if ( env.BRANCH_NAME == "master" || env.TAG_NAME ==~ ".*" ){
        sh 'pwd ; ls'
         dir('Azure-jenkins/Terraform') {
             sh "ls"
             }
         echo 'terraform code'
         }
      }
}